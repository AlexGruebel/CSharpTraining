@model NorthwindEntitiesLib.Category

<h1 class="display-2">@Model.CategoryName</h1>
    
<p class="lead">@Model.Description</p>

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in @Model.Products)
        {
            <tr class="clickTohref" href="/Product/ProductDetails/@product.ProductID">
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
            </tr>
        }
    </tbody>
</table>



