@model NorthwindMvc.Models.ProductsViewModel

<h1 class="display-2">Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Product Name</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in @Model.Categories)
        {
            int rowspan = category.Products.Count() + 1;
            <tr>
                <td rowspan="@rowspan"><a asp-controller="Product" asp-action="CategoryDetails" asp-route-id="@category.CategoryID">@category.CategoryName</a></td>
            </tr>   
            @foreach(var product in @category.Products)
            {
                <tr class="clickTohref" href="/Product/ProductDetails/@product.ProductID">
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                </tr>
            }
        }
    </tbody>
</table>
