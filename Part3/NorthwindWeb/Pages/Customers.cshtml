@page
@model NorthwindWeb.Pages.CustomersModel


<div class="row">
    <h1 class="display-2">Customers</h1>

    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Country</th>
                <th>Customer</th>
            </tr>
        </thead>

        <tbody>
            @for(int i = 0; i <Model.Customers.Length;i++)
            {
                <tr>
                    <td rowspan="@Model.Customers[i].Length">@Model.Countrys[i]</td>
                    <td>@Model.Customers[i][0]</td>
                </tr>

                for(int x = 1; x<Model.Customers[i].Length;x++)
                {

                    <tr>
                        <td>@Model.Customers[i][x]</td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>